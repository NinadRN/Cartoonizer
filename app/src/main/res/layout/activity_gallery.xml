<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">
    <include layout="@layout/appbar"/>
    <include layout="@layout/bg1"/>


    <GridView
        android:id="@+id/gride_view"
        android:layout_width="716dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="-4dp"
        android:columnWidth="@dimen/_90sdp"
        android:gravity="center"
        android:horizontalSpacing="@dimen/_21sdp"
        android:numColumns="3"
        android:verticalSpacing="@dimen/_53sdp" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/camera"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/button_bg"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginStart="246dp"
        android:layout_marginTop="717dp"
        android:text="Camera"
        />

    <Button
        android:id="@+id/gallery"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="717dp"
        android:background="@drawable/button_bg"
        android:text="Gallery" />





</com.google.android.material.navigation.NavigationView>