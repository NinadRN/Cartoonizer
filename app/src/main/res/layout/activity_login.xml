<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <include layout="@layout/bg1"/>



            <TextView
                android:id="@+id/logintext"
                android:layout_width="@dimen/_83sdp"
                android:layout_height="@dimen/_41sdp"
                android:layout_marginStart="@dimen/_110sdp"
                android:layout_marginTop="@dimen/_95sdp"
                android:layout_marginEnd="148dp"
                android:layout_marginBottom="600dp"
                android:gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:text="Login"
                android:textColor="#606060"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <EditText
                android:id="@+id/editTextPerson"
                android:layout_width="@dimen/_266sdp"
                android:layout_height="@dimen/_49sdp"
                android:layout_marginStart="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_210sdp"
                android:layout_marginEnd="@dimen/_54sdp"
                android:layout_marginBottom="@dimen/_38sdp"
                android:background="@drawable/loginborder"
                android:drawableLeft="@drawable/account_user_png_transparent_2"
                android:drawablePadding="67px"
                android:elevation="@dimen/_20sdp"
                android:padding="@dimen/_10sdp"
                android:ems="10"
                android:fontFamily="@font/inter_semibold"
                android:hint=" Richard01@"
                android:inputType="textPersonName"
                android:shadowColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/loginpassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/loginpassword"
                android:layout_width="@dimen/_266sdp"
                android:layout_height="@dimen/_49sdp"
                android:layout_below="@id/editTextPerson"
                android:layout_marginStart="@dimen/_55sdp"
                android:layout_marginTop="38px"
                android:layout_marginEnd="@dimen/_56sdp"
                android:elevation="@dimen/_20sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/loginborder"
                android:drawableLeft="@drawable/lock_icon_11_2_2x"
                android:drawablePadding="67px"
                android:ems="10"
                android:fontFamily="@font/inter_semibold"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="275dp" />

            <Button
                android:id="@+id/loginbutton"
                android:layout_width="@dimen/_266sdp"
                android:layout_height="@dimen/_49sdp"
                android:layout_below="@+id/loginpassword"
                android:layout_marginStart="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_72sdp"
                android:layout_marginEnd="@dimen/_54sdp"
                android:background="@drawable/button_bg"
                android:elevation="@dimen/_20sdp"
                android:fontFamily="@font/inter_semibold"
                android:includeFontPadding="false"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:cornerRadius="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/forgotpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginbutton"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="117dp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:text="Forgot your password ?"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/loginbutton"
                app:layout_constraintStart_toStartOf="@+id/loginbutton"
                app:layout_constraintTop_toBottomOf="@+id/loginbutton"/>

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forgotpassword"
                app:flow_verticalBias="0.26"
                />

        </RelativeLayout>

    </ScrollView>


</LinearLayout>